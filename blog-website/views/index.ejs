<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <div class="container">
      <h1>My Blog</h1>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/compose">Compose New Post</a></li>
      </ul>
    </div>
  </header>

  <div class="container">
    <div class="main-content">
      <h1>Blog Posts</h1>
      <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="post">
            <h2><a href="/posts/<%= post._id %>"><%= post.title %></a></h2>
            <p><%= post.content.substring(0, 100) %>...</p>
          </div>
        <% }); %>
      <% } else { %>
        <p>No posts available. <a href="/compose">Compose a new post</a>.</p>
      <% } %>
    </div>
  </div>

  <footer>
    <p>&copy; 2024 My Blog</p>
  </footer>
</body>
</html>
